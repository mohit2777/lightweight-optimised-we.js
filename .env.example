# ============================================================================
# WhatsApp Multi-Automation V2 - Environment Configuration
# ============================================================================
# Copy this file to .env and update the values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3000
NODE_ENV=production
LOG_TO_CONSOLE=true

# ============================================================================
# DASHBOARD AUTHENTICATION
# ============================================================================
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_password_here
SESSION_SECRET=your_random_32_char_secret_here

# ============================================================================
# SUPABASE DATABASE
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# PostgreSQL connection string (for session storage in production)
# Get this from Supabase: Settings > Database > Connection string > URI
# DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres

# ============================================================================
# SESSION COOKIES (HTTPS/SSL)
# ============================================================================
# Set to true when using HTTPS (Render, Railway, etc.)
SESSION_COOKIE_SECURE=false

# ============================================================================
# PUPPETEER/CHROMIUM (Cloud Deployment)
# ============================================================================
# For Linux/Docker deployments:
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# ============================================================================
# EGRESS OPTIMIZATION (Reduce Supabase Data Transfer)
# ============================================================================
# Disable message logging to save egress (loses message history)
DISABLE_MESSAGE_LOGGING=false

# Disable periodic session saves (sessions only save on disconnect)
DISABLE_PERIODIC_SESSION_SAVE=false

# Session save interval in milliseconds (default: 15 minutes)
# SESSION_SAVE_INTERVAL_MS=900000

# Webhook worker poll interval (default: 30 seconds)
WEBHOOK_WORKER_INTERVAL_MS=30000

# ============================================================================
# KEEPALIVE (Prevent Free Tier Sleep)
# ============================================================================
# URL to ping periodically (your own /health endpoint)
# KEEPALIVE_URL=https://your-app.onrender.com/health
# KEEPALIVE_INTERVAL_MINUTES=14

# ============================================================================
# MEMORY LIMITS (Container Deployment)
# ============================================================================
# NODE_OPTIONS=--max-old-space-size=512
