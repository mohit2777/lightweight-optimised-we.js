# WhatsApp Multi-Automation Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Supabase Configuration
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Direct database connection (for session storage)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# REQUIRED - Dashboard Authentication
# =============================================================================
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-secure-password

# =============================================================================
# REQUIRED - Security
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-random-64-character-hex-string

# =============================================================================
# OPTIONAL - Server Configuration
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# OPTIONAL - Session Persistence
# =============================================================================
# Save WhatsApp sessions to Supabase every 15 minutes (in milliseconds)
SESSION_SAVE_INTERVAL_MS=900000

# Set to "true" to disable periodic session saving
DISABLE_PERIODIC_SESSION_SAVE=false

# Maximum QR code generation attempts before giving up
MAX_QR_ATTEMPTS=10

# =============================================================================
# OPTIONAL - Message Logging
# =============================================================================
# Set to "true" to disable message logging to database (saves Supabase egress)
DISABLE_MESSAGE_LOGGING=false

# =============================================================================
# OPTIONAL - Logging
# =============================================================================
LOG_LEVEL=info
LOG_TO_CONSOLE=true

# =============================================================================
# OPTIONAL - Session Cookies (Production)
# =============================================================================
# Set to "true" when using HTTPS in production
SESSION_COOKIE_SECURE=false

# =============================================================================
# OPTIONAL - Auto-initialization
# =============================================================================
# Set to "true" to prevent auto-connecting saved WhatsApp accounts on startup
DISABLE_AUTO_INIT=false
